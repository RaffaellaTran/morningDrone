    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.USES_POLICY_FORCE_LOCK" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.raffy.mp3alarmclock.view.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.raffy.mp3alarmclock.view.activity.RingingAlarmActivity"
            android:parentActivityName="net.raffy.mp3alarmclock.view.activity.MainActivity"
            android:theme="@style/AppThemeNoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.raffy.mp3alarmclock.view.activity.MainActivity" />
        </activity>
        <activity
            android:name="net.raffy.mp3alarmclock.view.activity.AboutActivity"
            android:parentActivityName="net.raffy.mp3alarmclock.view.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.raffy.mp3alarmclock.view.activity.MainActivity" />
        </activity>
        <activity
            android:name="net.raffy.mp3alarmclock.bluetooth.MainActivityBluetooth"
            android:parentActivityName="net.raffy.mp3alarmclock.view.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.raffy.mp3alarmclock.view.activity.MainActivity" />
        </activity>
        <activity
            android:name="net.raffy.mp3alarmclock.morning_drone.Bluetooth2"
            android:parentActivityName="net.raffy.mp3alarmclock.view.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.raffy.mp3alarmclock.view.activity.MainActivity" />
        </activity>
        <activity
            android:name="net.raffy.mp3alarmclock.bluetooth_LE_GATT.DeviceScanActivity"
            android:parentActivityName="net.raffy.mp3alarmclock.view.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.raffy.mp3alarmclock.view.activity.MainActivity" />
        </activity>
        <activity android:name=".bluetooth.MonitorActivityBluetooth"/>
        <activity android:name=".bluetooth.SearchDeviceActivityBluetooth"/>
        <activity android:name=".bluetooth.SettingsActivityBluetooth"/>
        <activity android:name=".bluetooth.NextActivityBluetooth"/>
        <activity android:name=".bluetooth_LE_GATT.DeviceControlActivity"/>
        <service android:name=".bluetooth_LE_GATT.BluetoothLeService" android:enabled="true"/>

        <service
            android:name="net.raffy.mp3alarmclock.view.MediaPlayerService"
            android:enabled="true"
            android:permission="net.raffy.mp3alarmclock.MY_SERVICE_PERMISSION" />

        <receiver
            android:name="net.raffy.mp3alarmclock.view.PlayAlarmReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <provider
            android:name="net.raffy.mp3alarmclock.view.activity.AlarmClockProvider"
            android:authorities="net.raffy.mp3alarmclock.provider"
            android:exported="false" />
        <activity
            android:name="net.raffy.mp3alarmclock.view.activity.AlarmNotificationActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:excludeFromRecents="true" />
    </application>


